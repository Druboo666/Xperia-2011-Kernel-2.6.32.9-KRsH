if file_getprop("/tmp/aroma/doslot.prop","slot") == "4" then
    ui_print("@Slot 4 generation");
    ui_print(" ");
    ui_print("Generating system image...");
    run_program("/sbin/sh", "/sbin/multiboot_helper.sh", "makeimage", "4", "system", file_getprop("/tmp/aroma/systemsize.prop","size"));
    ui_print(" ");
    set_progress(0.20);
    ui_print("Generating userdata image...");
    run_program("/sbin/sh", "/sbin/multiboot_helper.sh", "makeimage", "4", "userdata", file_getprop("/tmp/aroma/userdatasize.prop","size"));
    ui_print(" ");
    set_progress(0.40);
