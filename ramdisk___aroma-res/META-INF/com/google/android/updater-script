if file_getprop("/tmp/aroma/doslot.prop","slot") == "2" then
    ui_print("@Slot 2 generation");
    ui_print(" ");
    ui_print("Generating system image...");
    run_program("/sbin/sh", "/sbin/multiboot_helper.sh", "makeimage", "2", "system", file_getprop("/tmp/aroma/systemsize.prop","size"));
    ui_print(" ");
    set_progress(0.20);
    ui_print("Generating userdata image...");
    run_program("/sbin/sh", "/sbin/multiboot_helper.sh", "makeimage", "2", "userdata", file_getprop("/tmp/aroma/userdatasize.prop","size"));
    ui_print(" ");
    set_progress(0.40);
    if file_getprop("/tmp/aroma/copysystem.prop","do") == "yes" then
        ui_print("Copying internal system to new image...");
        run_program("/sbin/sh", "/sbin/multiboot_helper.sh", "copyimage", "2", "system");
        ui_print(" ");
        set_progress(0.70);
    endif;
    if file_getprop("/tmp/aroma/copyuserdata.prop","do") == "yes" then
        ui_print("Copying internal userdata to new image...");
        run_program("/sbin/sh", "/sbin/multiboot_helper.sh", "copyimage", "2", "userdata");
        ui_print(" ");
    endif;
endif;

if file_getprop("/tmp/aroma/doslot.prop","slot") == "3" then
    ui_print("@Slot 3 generation");
    ui_print(" ");
    ui_print("Generating system image...");
    run_program("/sbin/sh", "/sbin/multiboot_helper.sh", "makeimage", "3", "system", file_getprop("/tmp/aroma/systemsize.prop","size"));
    ui_print(" ");
    set_progress(0.20);
